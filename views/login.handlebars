<h1>Login</h1>
<div class="description">
<img class="plane" src="/on_plane_copy.png" alt="cnn.com">
<figcaption>© cnn.com</figcaption>
</div>
{{#if inputIncomplete}}
  {{>error }}
  {{/if}}
<div class="form-container">
<form id="signup" method="POST" action="/login">
  <label for="email"></label>
  <input type="email" id="email" name="email" placeholder="Enter your email">
  
  <label for="password"></label>
  <input type="password" id="password" name="password" minlength="4" placeholder="Enter your password">
  <br>
  <input id="button" type="submit" value="Login  ✈">
  <input type="hidden" name="_csrf" value="{{csrfToken}}">
</form>
<a class="logout" href="/">Register</a>
</div>

